<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include partials/pageStyles %>
  </head>
  <body>
    <% include partials/navbar %>

    <main>
      <div class="container">
        <h1><%= title %></h1>
      </div>
    </main>



    <div class="container">
      <main>
      
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead class="thead-light">
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Duration</th>
                <th scope="col">Location</th>
                <th scope="col">Pollutant(s)</th>
                <th scope="col">Collected</th>
              </tr>
            </thead>

            <tbody>
            <% for (let i = 0; i < records.length; i++) { %>
              <% const morePollutants = records[i].pollutants.length > 1 ? ' + ' + records[i].pollutants.length - 1 + 'more' : '' %>
              <tr>
                <td><%= records[i].deployment_date %></td>
                <td><%= records[i].hours %>h <%= records[i].minutes %>m</td>
                <td><%= records[i].city %>, <%= records[i].country %></td>
                <td><%= records[i].pollutants[0].name %> <%= records[i].pollutants.length > 1 ? ' + ' + (records[i].pollutants.length - 1) + ' more' : '' %></td>
                <td><%= records[i].quantity %><%= records[i].unit %></td>
              </tr>
            <% } %>
            </tbody>
          </table>
        </div>
      </main>
    </div>


    <% include partials/pageScripts %>
  </body>
</html>
